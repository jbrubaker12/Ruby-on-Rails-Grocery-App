<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <%= form_with(model: grocery, local: true) do |form| %>
        <% if grocery.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(grocery.errors.count, "error") %> prohibited this grocery from being saved:</h4>
            <ul>
              <% grocery.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :grocery_name, class: "form-label" %>
          <%= form.text_field :grocery_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :quantity, class: "form-label" %>
          <%= form.number_field :quantity, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :category, class: "form-label" %>
          <%= form.text_field :category, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :store_name, class: "form-label" %>
          <%= form.text_field :store_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :pickup_time, class: "form-label" %>
          <%= form.date_field :pickup_time, class: "form-control" %>
        </div>

        <div class="mt-4">
          <%= form.submit "Save Grocery", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

