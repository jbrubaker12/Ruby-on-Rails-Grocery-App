<p style="color: green"><%= notice %></p>

<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <%= render @grocery %>

      <div class="mt-3">
        <%= link_to "Edit this grocery", edit_grocery_path(@grocery), class: "btn btn-primary me-2" %>
        <%= link_to "Back to groceries", groceries_path, class: "btn btn-secondary me-2" %>
        <%= button_to "Destroy this grocery", @grocery, method: :delete, data: { confirm: "Are you sure?" }, class: " mt-3 btn btn-danger" %>
      </div>
    </div>
  </div>
</div>

